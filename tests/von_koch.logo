
(* Le flocon de Von Koch *)

def von_koch(n, d) {
  if n {
    von_koch (n-1, d/3)
    turnleft 60
    von_koch (n-1, d/3)
    turnright 120
    von_koch (n-1, d/3)
    turnleft 60
    von_koch (n-1, d/3)
  } else
    forward d
}

