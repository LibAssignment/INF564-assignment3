
(* dessine un polygone et replace la tortue *)

def polygone_aux(n, d, a) {
  turnleft 90 + a/2
  repeat n { forward d turnleft a }
  turnleft 90 - a/2
}

def polygone(n, r) {
  penup
  forward r
  pendown
  polygone_aux(n, r, 360/n)
  penup
  forward r
  turnleft 180
  pendown
}

def carre(r)
  polygone(4, r)

def pentagone(r)
  polygone(5, r)

